---
// library imports
import { Icon } from "astro-icon";

// components imports
import Link from "./Link.astro";

// data imports
import navData from "../data/navData.js";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" class="logomark flex-shrink-0" aria-label="Go home">
      <img src="/images/logo-removebg.png" width="80" />
    </a>
    <ul class="pt-4 ml-auto">
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            style="primary"
            isFilled={false}
            borderVisible={false}
          />
        ))
      }
    </ul>
  </div>

  <div class="max-w-8xl mx-auto px-4">
    <hr class="border-skin-line border-purple-light" aria-hidden="true" />
  </div>
</nav>

<script>
  import "../js/nav.js";
</script>

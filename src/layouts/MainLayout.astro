---
const {
  title = "My Astro Blog",
  description = "My musings about the Astro framework",
  image,
  frontmatter,
  robots,
} = Astro.props;

import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
---

<html lang="en" data-theme="corporate">
  <MainHead {title} {description} {image} {frontmatter} {robots} />
  <body class="font-body gradient-background gradient-purple bg-cover bg-center">
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
<style>
.gradient-background {
  background-image: linear-gradient(to right top, #d0f288, #c7f072, #bdef5a, #b3ed3f, #a8eb12);
  /* background-image: linear-gradient(to right top, #2e073f, #2c052b, #24041b, #19010d, #000000); */
}
  </style>

  </body>
</html>

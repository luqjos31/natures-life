---
//utils
import { slugify, formatDate } from "../js/utils";
// components imports
import Link from "./Link.astro";
const { frontmatter, url, tagType } = Astro.props;
const Tag = tagType;
const { title, date, author, image, description, category } = frontmatter;
---

<!-- <pre>{ JSON.stringify(frontmatter,null,2)}</pre> -->
<div class="container mx-auto">
  <article class="card mt-8">
    <small class="">
      <a
        href={`/category/${slugify(category)}/`}
        class="text-white bg-slate-950 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium text-sm px-2 py-2 mr-2 mb-2 dark:bg-black dark:hover:bg-slate-950 focus:outline-none dark:focus:ring-blue-800 mt-4"
        >{category}</a
      >
    </small>
    <a href={url} aria-hidden="true" tabindex="-1">
      <img class="mt-2" src={image.src} alt={image.alt} width="200" />
    </a>

    <div class="content">
      <div>
        <Tag class="text-4xl font-bold dark:text-white">
          <a href={url}>{title}</a>
        </Tag>

        <small>
          by <a href={`/author/${slugify(author)}/`}>{author}</a> - {
            formatDate(date)
          }
        </small>
      </div>
    </div>
    <p class="my-8">{description}</p>
    <Link href={url} isFilled={true} text="Read Post" style="secondary" />
  </article>
</div>
